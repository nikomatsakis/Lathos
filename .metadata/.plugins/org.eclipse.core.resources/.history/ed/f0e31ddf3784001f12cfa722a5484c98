package com.smallcultfollowing.lathos.model;

public class Text implements Displayable {
	
	public final String text;
	
	public Text(String text) {
		super();
		this.text = escape(text);
	}
	
	private final String escape(String text) {
		// Umm, there must exist a library for this somewhere
		// that'll do it properly!
		text = text.replaceAll("&", "&amp;");
		text = text.replaceAll("<", "&lt;");
		return text;
	}

	@Override
	public String toHtml(Render render) {
		return render.escape(text);
	}

}
