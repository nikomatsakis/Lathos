package com.smallcultfollowing.lathos.model;

public class Link implements Displayable {
	
	public final Node link;
	public final Displayable message; // could be null
	
	public Link(Node link, Displayable message) {
		super();
		this.link = link;
		this.message = message;
	}

	@Override
	public void toHtml(Render render, StringBuilder sb) {
		sb.append("<a href='");
		sb.append(render.linkURI(link));
		sb.append("'>");
		if(message == null)
			render.escape(link.id, sb);
		else
			message.toHtml(render, sb);
		sb.append("</a>");
	}

}
